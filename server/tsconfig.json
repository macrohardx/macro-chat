{
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "./",
        "sourceMap": true,
        "declaration": false,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es5",
        "lib": ["es6"],
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [ "node", "reflect-metadata" ]
    },
    "files": [
        "src/server.ts",
        "src/types/express-custom.d.ts"
    ],
    "exclude": [
        "node_modules/",
        "src/tests",
        "dist/"
    ]
}